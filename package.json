{
  "name": "@nogataka/coding-agent-viewer",
  "version": "0.0.3",
  "bin": {
    "coding-agent-viewer": "npx-cli/bin/cli.js"
  },
  "files": [
    "npx-cli/bin/cli.js",
    "npx-cli/dist/**"
  ],
  "scripts": {
    "check": "npm run frontend:check && npm run backend:check",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "test:npm": "./test-npm-package.sh",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:check": "cd frontend && npm run check",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:check": "cd backend && npm run check",
    "backend:start": "cd backend && npm run start",
    "install:all": "npm install --prefix frontend && npm install --prefix backend && npm install --prefix npx-cli",
    "build:npx": "bash ./local-build.sh",
    "build": "npm run backend:build && cd frontend && npm run build",
    "prepack": "npm run build:npx"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "concurrently": "^8.2.2",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@ltd/j-toml": "^1.38.0",
    "@octokit/rest": "^22.0.0",
    "@sentry/node": "^8.0.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^11.1.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "ignore": "^5.3.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "simple-git": "^3.22.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
